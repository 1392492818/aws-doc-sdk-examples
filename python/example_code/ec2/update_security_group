# snippet-start:[ec2.python.update_security_group.complete]

import boto3
     custom_filter = [{
        'Name':'tag:Name', 
        'Values': 'INSTANCENAME'}]
     ec2 = boto3.resource('ec2')
    instances = ec2.instances.filter(Filters=custom_filter)
     for instance in instances:
        instance.modify_attribute(Groups=['sg-XXXXXXX','sg-XXXXXXX'],DryRun=False)
        
# snippet-end:[ec2.python.update_security_group.complete]
